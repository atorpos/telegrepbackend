# Server
PORT=3000
NODE_ENV=development

# JWT settings
JWT_SECRET=replace-with-a-long-random-secret
JWT_EXPIRES_IN=1h
JWT_ISSUER=telegrepbackend
JWT_AUDIENCE=teleprepusers
JWT_ALGORITHM=HS256

# Simple auth options for issuing tokens (pick one method)
# Option A: API key-based token issuance
AUTH_API_KEY=replace-with-strong-api-key

# Option B: Static username/password for token issuance
AUTH_USERNAME=admin
AUTH_PASSWORD=change-me

# MySQL
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=teleprep_db

# MongoDB
MONGODB_URI=mongodb://localhost:27017/teleprep_db

